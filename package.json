{
  "name": "ruby-web",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "format": "prettier --write './**/*.{js,jsx,css,html}'",
    "testbuild": "yarn test && yarn build",
    "lint": "next lint",
    "lint:js": "yarn eslint --quiet --cache --ext .js,.jsx,.ts,.tsx --format=pretty",
    "lint:js:all": "yarn lint:js .",
    "fix-css": "npx stylelint '**/*.css' --fix",
    "lint:style": "stylelint '**/*.css'"
  },
  "lint-staged": {
    "**/*.less": [
      "yarn lint:style:fix"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --format=pretty"
    ],
    "**/*.{js,jsx,tsx,ts,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@emotion/cache": "^11.9.3",
    "@emotion/react": "^11.9.3",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.9.3",
    "@mdx-js/loader": "^2.1.1",
    "@mdx-js/react": "^2.1.1",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.4",
    "@mui/styles": "^5.8.4",
    "@next/mdx": "^12.1.6",
    "localStorage": "^1.0.4",
    "next": "^12.1.6",
    "next-compose-plugins": "^2.2.0",
    "next-progressbar": "^1.0.0",
    "react": "17.0.2",
    "react-darkreader": "^1.5.6",
    "react-dom": "17.0.2",
    "tailwindcss": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react": "^1.1.7",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.0.4",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
